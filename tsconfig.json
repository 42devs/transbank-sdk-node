{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["ES2020"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "~/*": ["./*"]
    }
  },
  "compileOnSave": false,
  "include": ["src"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
